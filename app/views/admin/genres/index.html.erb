<div class="container">
    <div class="row justify-content-center py-4">
      <h4>ジャンル一覧・追加</h4>
    </div>
      <%= form_with model: @genre,url: admin_genres_path, local:true ,class: "row justify-content-center " do |f| %>
      <div class="form-group row col-md-12">
        <div class="col-md-7">
          <%= f.label :"ジャンル名", class: "col-form-label col-md-3 py-3" %>
          <%=f.text_field :name, autofocus: true, class: "col-md-4"  %>
        </div>
        <div class="col-md-5">
          <%= f.submit "新規登録" , class: 'btn btn-success col-md-4' %>
        </div>
      </div>
      <% end %>
    <div class="row justify-content-center"><h4>ジャンル</h4></div>
    <div class="row">
      <%  @genres.each do |genre| %>
        <div class="col-md-6 justify-content-center py-2">
          <div class=""><%= genre.name %></div>
          <div class=""><%= link_to "編集する", edit_admin_genre_path(genre), class: ' d-sm-flex justify-content-sm-center btn btn-success ' %></div>
        </div>
      <% end %>
    </div>
</div>
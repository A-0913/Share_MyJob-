<div class="container p-4">
    <div class="row justify-content-center py-4">
      <h4>ジャンル一覧・追加</h4>
    </div>
    <%= form_with model: @genre,url: admin_genres_path, local:true ,class: "justify-content-center " do |f| %>
    <div class="row justify-content-center pb-3">
        <%= f.label :"ジャンル名", class: "col-form-label col-md-3 text-center" %>
        <%=f.text_field :name, autofocus: true, class: "col-md-4"  %>
    </div>
    <div class="row justify-content-center pb-3">
      <%= f.submit "新規登録" , class: 'btn btn-success col-md-4' %>
    </div>
      <% end %>
    <div class="row justify-content-center"><h4>ジャンル</h4></div>
    <div class="row">
      <%  @genres.each do |genre| %>
        <div class="col-md-6 justify-content-center py-2">
          <div class="row justify-content-center ">
            <div class="col-md-3"><%= genre.name %></div>
            <div class="col-md-3"><%= link_to "編集する", edit_admin_genre_path(genre), class: ' d-sm-flex justify-content-sm-center btn btn-success ' %></div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row justify-content-center py-4">
      <%= link_to "TOPへ戻る" , admin_path , class: "btn btn-primary col-sm-3" %>
    </div>
</div>
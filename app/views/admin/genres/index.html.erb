<div class="container p-4">
    <div class="row justify-content-center py-3">
      <h4>ジャンル一覧</h4>
    </div>

    <%= form_with model: @genre,url: admin_genres_path, local:true  do |f| %>
      <div class="row justify-content-center ">
        <div class="col-md-4 text-center">
          <div class="form-group">
            <%=f.text_field :name, autofocus: true, class: "form-control w-75", placeholder: "追加したいジャンルを入力"  %>
          </div>
        </div>
        <div class="col-md-4 align-self-end">
          <div class="form-group">
            <%= f.submit "新規登録" , class: 'btn btn-success form-control w-75' %>
          </div>
        </div>
      </div>
    <% end %>


    <div class="row p-3">
      <%  @genres.each do |genre| %>
        <div class="col-md-6 justify-content-center py-2">
          <div class="row justify-content-center ">
            <div class="col-md-4"><%= genre.name %></div>
            <div class="col-md-4"><%= link_to "編集する", edit_admin_genre_path(genre), class: ' d-sm-flex justify-content-sm-center btn btn-success ' %></div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row justify-content-center py-4">
      <%= link_to "TOPへ戻る" , admin_path , class: "btn btn-primary col-sm-3" %>
    </div>
</div>
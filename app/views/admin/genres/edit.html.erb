<div class="container">
    <div class="row justify-content-center py-4">
      <h3>ジャンル編集</h3>
    </div>
      <%= form_with model: @genre,url: admin_genre_path, local:true ,class: "row justify-content-center " do |f| %>
        <div class="form-group row justify-content-center col-9 pt-4">
          <%= f.label :"ジャンル名", class: "col-form-label col-sm-2" %>
          <%=f.text_field :name, autofocus: true, class: "col-sm-3"  %>
        </div>
        <div class="form-group row justify-content-center col-9 pt-4">
          <%= f.submit "変更を更新" , class: 'btn btn-success col-sm-4 m-2 ' %>
           <%= link_to "ジャンル一覧へ戻る" , admin_genres_path, class: 'btn btn-primary col-sm-4 m-2 ' %>
        </div>
      <% end %>
</div>
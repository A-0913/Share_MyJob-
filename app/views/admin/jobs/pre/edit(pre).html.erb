<div class="container">
    <div class="row py-4">
      <h3>職業情報編集</h3>
    </div>
    <div class="row">
      <div class="w-75">
        <%= form_with model: @job,url:admin_job_path(@job), local:true do |f| %>

          <div class="form-group row">
            <%= f.label :職業ジャンル, class: "col-sm-3 col-form-label" %>
            <%= f.select :genre_id,  options_from_collection_for_select(Genre.all, :id, :name, @job.genre.id), include_blank: '選択してください', class: "form-control col-sm-6"  %><br>
          </div>

          <div class="form-group row">
            <%= f.label :"職業名", class: "col-sm-3 col-form-label" %>
            <%= f.text_field :name,  class: "col-sm-6"  %>
          </div>

          <div class="form-group row">
            <%= f.label :"追加理由", class: "col-sm-3 col-form-label" %>
            <%= f.text_area :reason,  class: "col-sm-6", placeholder: "既存の職業にないため" %>
          </div>

          <div class="form-group row">
            <%= f.label "表示ステータス", class: "col-sm-3  col-form-label" %>
            <%= f.radio_button :is_published, :false %>
            <%= f.label :is_published, "未公開", class: "col-sm-2" %>
            <%= f.radio_button :is_published, :true %>
            <%= f.label :is_published, "公開", class: "col-sm-2" %>
          </div>

          <div class="form-group row">
            <%= f.label "確認ステータス", class: "col-sm-3  col-form-label" %>
            <%= f.radio_button :is_checked, :false %>
            <%= f.label :is_checked, "未確認", class: "col-sm-2" %>
            <%= f.radio_button :is_checked, :true %>
            <%= f.label :is_checked, "確認済み", class: "col-sm-2" %>
          </div>

          <div class="row py-4">
            <%= f.submit "更新" , class: 'btn btn-success offset-3 col-lg-3'  %>
            <%= link_to "職業詳細へ戻る" , admin_job_path(@job), class: 'btn btn-danger offset-1 col-lg-3 ' %>
          </div>

        <% end %>
     </div>
    </div>
</div>
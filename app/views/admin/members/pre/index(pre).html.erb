<div class = "container">
  <div class = "row py-4">
    <h3>会員一覧</h3>
  </div>
  <div class="table-responsive">
    <table class="table table-hover table-bordered ">
      <thead class="thead-dark">
        <tr>
          <th class="header col-md-1">会員ID</th>
          <th class="header col-md-3">氏名</th>
          <th class="header col-md-3">ニックネーム</th>
          <th class="header col-md-3">メールアドレス</th>
          <th class="header col-md-2">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td class="table-light"><%= member.id %></td>
            <td class="table-light">
              <%= link_to member.last_name+"　"+member.first_name , admin_member_path(member) %>
            </td>
            <td class="table-light"><%= member.nickname %></td>
            <td class="table-light"><%= member.email %></td>
            <td class="table-light">
                  <% if member.is_deleted == false %>
                    <p class="text-success font-weight-bold">有効</p>
                  <% else %>
                    <p class="text-danger font-weight-bold">退会</p>
                  <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row justify-content-center">
  <%= paginate @members %>
  </div>

  <div class="row justify-content-center py-4">
    <%= link_to "TOPへ戻る" , admin_path , class: "btn btn-primary col-sm-3" %>
  </div>

</div>
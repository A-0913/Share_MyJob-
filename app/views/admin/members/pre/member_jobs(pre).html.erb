<div class = "container">
  <div class = "row py-4">
    <h3><%= @member.nickname %>さんの職業投稿履歴</h3>
  </div>
  <table class="table table-hover table-bordered ">
    <thead class="thead-dark">
      <tr>
        <th class="header">投稿日</th>
        <th class="header">職業ジャンル</th>
        <th class="header">職業名</th>
        <th class="header">追加理由</th>
        <th class="header">公開/非公開</th>
        <th class="header">管理者確認</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td class="table-light"><%= job.created_at.strftime('%Y/%m/%d') %></td>
          <td class="table-light"><%= job.genre.name %></td>
          <td class="table-light"><%= job.name %></td>
          <td class="table-light"><%= job.reason %></td>
          <td class="table-light">
            <% if job.is_published == false %>
              <p class="text-danger font-weight-bold">非公開</p>
            <% else %>
              <p class="text-success font-weight-bold">公開</p>
            <% end %>
          </td>
          <td class="table-light">
            <% if job.is_checked == false %>
              <p class="text-success font-weight-bold">未確認</p>
            <% else %>
              <p class="text-success font-weight-bold">確認済み</p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row justify-content-center">
  <%= paginate @jobs %>
  </div>
  <div class="row justify-content-center py-4">
    <%= link_to "プロフィールへ戻る" , admin_member_path(@member) , class: "btn btn-primary col-sm-3" %>
  </div>
</div>
<div class="container p-4">
    <div class="row justify-content-center py-4">
      <h3>会員情報編集</h3>
    </div>

    <% if @member.errors.any? %>
      <ul class="alert alert-danger" role="alert">
        <h5 class="alert-heading">
          <%= @member.errors.count %>件のエラーが発生しました
        </h5>
        <% @member.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="row justify-content-center pt-3">
      <%= form_with model: @member, local:true do |f| %>
          <div class="form-group row px-4">
            <%= f.label :プロフィール画像, class: "col-sm-5 col-form-label" %>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class="form-group row px-4 ">
            <%= f.label :"名前", class: "col-sm-4 col-form-label" %>
            <%= f.label :"(姓)", class: "col-sm-1 col-form-label" %>
            <%= f.text_field  :last_name, autofocus: true, class: "col-lg-3" %>
            <%= f.label :"(名)", class: "col-sm-1 col-form-label" %>
            <%= f.text_field :first_name, autofocus: true, class: "col-lg-3" %>
          </div>
          <div class="form-group row px-4">
            <%= f.label :"ニックネーム", class: "col-sm-5  col-form-label" %>
            <%= f.text_field :nickname, autofocus: true, class: "col-lg-3" %>
          </div>

          <div class="form-group row px-4">
            <%= f.label :"メールアドレス", class: "col-sm-5  col-form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-7" %>
          </div>

          <div class="form-group row px-4">
            <%= f.label :"パスワード", class: "col-sm-5  col-form-label" %>
            <%= f.text_field :encrypted_password, autofocus: true, class: "col-lg-7", disabled: true %>
          </div>

          <div class="form-group row px-4">
            <%= f.label :"自己紹介文", class: "col-sm-5 col-form-label" %>
            <%= f.text_area :introduction,  class: "col-lg-7" %>
          </div>

          <div class="form-group row px-4">
            <%= f.label :belong, '属性', class: "col-sm-5 col-form-label" %>
            <%= f.select :belong, {"大企業勤務": "大企業勤務", "中小企業勤務": "中小企業勤務", "フリーランス": "フリーランス", "学生": "学生", "就職活動中": "就職活動中", "転職を検討中": "転職を検討中"}, { include_blank: '選択してください'}, { class: 'form-control col-lg-5' , required: true } %>
          </div>

          <div class="row justify-content-center">
            <%= f.submit "更新する" , class: 'btn btn-success  col-sm-3 m-3'%>
            <%= link_to "退会する" , members_confirm_path(@member), class: 'btn btn-danger col-sm-3 m-3' %>
          </div>
          <div class="row justify-content-center py-3">
            <%=  link_to "マイページへ戻る" , member_path(@member), class: 'btn btn-primary col-sm-5 mx-4' %>
          </div>
        <% end %>

    </div>
</div>
<div class="container">
    <div class="row py-4">
      <h3>会員情報編集</h3>
    </div>
    <div class="row">
      <%= form_with model: @member, local:true do |f| %>
          <div class="form-group row">
            <%= f.label :プロフィール画像, class: "col-sm-5 col-form-label" %>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class="form-group row ">
            <%= f.label :"名前", class: "col-sm-4 col-form-label" %>
            <%= f.label :"(姓)", class: "col-sm-1 col-form-label" %>
            <%= f.text_field  :last_name, autofocus: true, class: "col-lg-3" %>
            <%= f.label :"(名)", class: "col-sm-1 col-form-label" %>
            <%= f.text_field :first_name, autofocus: true, class: "col-lg-3" %>
          </div>
          <div class="form-group row">
            <%= f.label :"ニックネーム", class: "col-sm-5  col-form-label" %>
            <%= f.text_field :nickname, autofocus: true, class: "col-lg-3" %>
          </div>

          <div class="form-group row">
            <%= f.label :"紹介文", class: "col-sm-5 col-form-label" %>
            <%= f.text_area :introduction,  class: "col-lg-7" %>
          </div>

          <div class="form-group row">
            <%= f.label :belong, '所属', class: "col-sm-5 col-form-label" %>
            <%= f.select :belong, {'大企業': 1, '中小企業': 2, '小規模企業者': 3, '学生': 4, '就職活動中': 5, '転職を考え中': 6}, { include_blank: '選択してください'}, { class: 'form-control col-lg-5' , required: true } %>
          </div>

          <div class="row py-4">
            <%= f.submit "更新" , class: 'btn btn-success col-lg-3 offset-5'  %>
            <%= link_to "退会する" , members_confirm_path(@member), class: 'btn btn-danger   col-lg-3 offset-1' %>
          </div>
        <% end %>
    </div>
</div>
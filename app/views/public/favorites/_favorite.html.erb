<% if comment.favorited_by?(current_member) %>
    <%= link_to  job_theme_comment_favorites_path(job, theme, comment), class: "btn btn-info ", method: :delete , remote: true do%>
    なるほど!<i class="far fa-thumbs-up"></i><%= comment.favorites.count %>
    <% end %>
<% else %>
    <%= link_to  job_theme_comment_favorites_path(job, theme, comment), class: "btn btn-secondary",  method: :post , remote: true  do %>
    なるほど!<i class="far fa-thumbs-up"></i><%= comment.favorites.count %>
    <% end %>
<% end %>
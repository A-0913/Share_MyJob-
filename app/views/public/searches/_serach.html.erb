<div class="method_form">
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <%= f.label :word, "職業検索" %>
    <%= f.text_field :word, placeholder: "検索する職業を入力", class: "form-control" %>
    <div class="d-flex">
      <%= f.select :method, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]), { include_blank: "検索条件を選択"} %>
      <div class="mx-2">
      <%= f.submit "検索する", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
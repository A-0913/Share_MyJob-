<div class="container p-4">
    <div class="row justify-content-center  py-4">
      <h3>職業追加画面</h3>
    </div>
    <div class="row justify-content-center p-4">
      <div class="w-75">
      <%= form_with model: @job,url:jobs_path, local:true do |f| %>

          <div class="form-group row">
          <%= f.label :職業ジャンル, class: "col-sm-3 col-form-label" %>
          <%= f.select :genre_id,  options_from_collection_for_select(Genre.all, :id, :name), include_blank: '選択してください', class: "form-control col-sm-6"  %><br>
          </div>

          <div class="form-group row">
            <%= f.label :"職業名", class: "col-sm-3 col-form-label" %>
            <%= f.text_field :name,  class: "col-sm-6"  %>
          </div>

          <div class="form-group row">
            <%= f.label :"追加理由", class: "col-sm-3 col-form-label" %>
            <%= f.text_area :reason,  class: "col-sm-6", placeholder: "既存の職業にないため" %>
          </div>

      </div>
    </div>
    <div class="row justify-content-center pb-4">
      <%= f.submit "新規登録" , class: 'btn btn-success  col-sm-5' %>
    </div>
    <% end %>

    <div class="row justify-content-center pb-4">
        <%= link_to "職業一覧へ戻る" , jobs_path(@job), class: 'btn btn-primary col-sm-5' %>
    </div>
</div>

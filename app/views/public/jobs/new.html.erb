<div class="container">
    <div class="row py-4">
      <h3>職業追加画面</h3>
    </div>
    <div class="row">
      <%= form_with model: @job,url:jobs_path, local:true do |f| %>

          <div class="form-group row">
            <%= f.label :"職業名", class: "col-sm-5 col-form-label" %>
            <%= f.text_field :name,  class: "col-lg-7"  %>
          </div>

          <div class="form-group row">
            <%= f.label :"追加理由", class: "col-sm-5 col-form-label" %>
            <%= f.text_area :reason,  class: "col-lg-7", placeholder: "既存の職業にないため" %>
          </div>

          <div class="form-group row">
            <%= f.submit "新規登録" , class: 'btn btn-success offset-1 col-sm-5' %>
          </div>

        <% end %>
    </div>
</div>

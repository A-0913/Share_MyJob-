<div class="container p-4">
    <div class="row justify-content-center  py-4">
      <h3>職業追加画面</h3>
    </div>

    <% if @job.errors.any? %>
      <ul class="alert alert-danger" role="alert">
        <h5 class="alert-heading">
          <%= @job.errors.count %>件のエラーが発生しました
        </h5>
        <% @job.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="row justify-content-center p-4">
      <div class="w-75">

        <%= form_with model: @job, local:true do |f| %>

          <div class="form-group">
            <div class="row">
              <div class="col-md-3 text-left text-md-left">
                <%= f.label :genre_id, "職業ジャンル" %>
              </div>
              <div class="col-md-9">
                <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), include_blank: 'ジャンルを選択してください' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-3 text-left text-md-left">
                <%= f.label :name, "職業名" %>
              </div>
              <div class="col-md-9">
                <%= f.text_field :name, placeholder: "追加する職業名を入力", class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-3 text-left text-md-left">
                <%= f.label :contact, "管理人への連絡事項" %>
              </div>
              <div class="col-md-9">
                <%= f.text_area :contact, placeholder: "連絡事項がありましたらご入力下さい", class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-3 text-left text-md-center">
              </div>
              <div class="col-md-9">
                <%= f.submit "職業を追加する" , class: 'btn btn-success col-md-8' %>
              </div>
            </div>
          </div>

        <% end %>

          <div class="form-group">
            <div class="row">
              <div class="col-md-3 text-left text-md-center">
              </div>
              <div class="col-md-9">
                <%= link_to "職業一覧へ戻る" , jobs_path(@job), class: 'btn btn-primary col-md-8' %>
              </div>
            </div>
          </div>

      </div>
    </div>



</div>

<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <div class="mt-4">
        <%#= render 'public/searches/search' %>
        <%= render partial: 'public/searches/serach' %>
      </div>
      <div class="mt-4">
        <%= render 'admin/genres/genre_sidebar', genres: @genres%>
      </div>
    </div>
    <div class="col-sm-9">
      <div class="row justify-content-center py-4">
        <table  border="1"  rules=rows width="80%" >
          <thead>
            <tr align="center">
              <th width="50%" class="bg-primary text-white" >職業名</th>
              <th width="20%" class="bg-primary text-white">関心度</th>
            </tr>
          </thead>
          <tbody>
            <% @jobs.each do |job| %>
              <tr align="center">
                <td class="bg-white"><%= link_to job.name, job_path(job) %></td>
                <td class="bg-white"><%= job.interest %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row justify-content-center py-4 ">
        <% unless admin_signed_in? %>
          <% if @member.email != 'guest@example.com' %>
            <%= link_to "職業を追加する" , new_job_path, class: 'btn btn-success col-sm-4' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

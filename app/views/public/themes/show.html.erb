<div class="container p-4">
  <div class="row justify-content-center ">
    <div class="title-box">
      <div class="title-box-title"><%= @job.name %></div>
        <p><%= @theme.name %></p>
    </div>
  </div>
  <div id="comments_area">
    <% @comments.each do |comment| %>
      <div id="comments_area_<%=comment.id%>">
        <%= render partial: 'public/comments/comments', locals:{job: @job, theme: @theme,comment: comment} %>
      </div>
    <% end %>
    <div class="row justify-content-center ">
      <%= paginate @comments, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
  <%# if 7 < @comments_all.count %>
    <!--<div class="row justify-content-center ">-->
      <%#= link_to "すべてのコメントを見る>>" ,show_all_path(@job,@theme), class: 'btn btn-info col-sm-5' %>
    <!--</div>-->
  <%# else %>
    <div id="comments_new">
      <%= render partial: 'public/comments/form', locals:{job: @job, theme: @theme, comment: @comment} %>
    </div>
  <%# end %>

  <div class="row justify-content-center py-4">
      <%= link_to "テーマ一覧へ戻る" , job_path(@job), class: 'btn btn-primary col-sm-5' %>
  </div>
</div>
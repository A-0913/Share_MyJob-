<div class="container">
    <div class="row py-4">
      <h3>テーマ追加画面</h3>
    </div>
    <div class="row">
      <div class="w-75">
        <%= form_with model: @theme,url:job_themes_path(@job), local:true do |f| %>

            <div class="form-group row">
              <%= f.label :"テーマ名", class: "col-sm-3 col-form-label" %>
              <%= f.text_field :name,  class: "col-lg-6"  %>
            </div>

            <div class="form-group row">
              <%= f.label :"追加理由", class: "col-sm-3 col-form-label" %>
              <%= f.text_area :reason,  class: "col-lg-6", placeholder: "既存のテーマにないため" %>
            </div>

            <div class="form-group row">
              <%= f.submit "新規登録" , class: 'btn btn-success offset-3 col-sm-5' %>
            </div>

          <% end %>
      </div>
    </div>
    <div class="row pb-4">
      <div class="w-75">
        <%= link_to "テーマ一覧へ戻る" , job_path(@job), class: 'btn btn-primary offset-3 col-sm-5' %>
      </div>
    </div>
</div>
<div class="container">
    <div class="row py-4">
      <h3>テーマ追加画面</h3>
    </div>
    <div class="row">
      <%= form_with model: @theme,url:themes_path, local:true do |f| %>

          <div class="form-group row">
            <%= f.label :"テーマ名", class: "col-sm-5 col-form-label" %>
            <%= f.text_area :name,  class: "col-lg-7"  %>
          </div>

          <div class="form-group row">
            <%= f.label :"追加理由", class: "col-sm-5 col-form-label" %>
            <%= f.text_area :reason,  class: "col-lg-7", placeholder: "既存のテーマにないため" %>
          </div>

          <div class="form-group row">
            <%= f.submit "新規登録" , class: 'btn btn-success offset-1 col-sm-5' %>
          </div>

        <% end %>
    </div>
</div>
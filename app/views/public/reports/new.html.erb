<div class = "container p-4">
  <div class = "row justify-content-center py-3">
    <h3>通報画面</h3>
  </div>

  <%= form_with model: @report ,url: job_theme_comment_reports_path(reply_id: params[:reply_id]) do |f| %>
  <div class = "row justify-content-center">
    <div class="row col-10 justify-content-center">
      <div class="col-md-3 d-flex align-items-center border border-white text-white bg-dark">通報コメント</div>
      <div class="col-md-9 border border-dark bg-white text-dark p-3">
        <% if params[:reply_id] %>
          <%= @reply.reply %>
        <% else %>
          <%= @comment.comment %>
        <% end %>
      </div>
    </div>

    <div class="row col-10 justify-content-center">
      <div class="col-md-3 d-flex align-items-center border border-white text-white bg-dark">通報理由</div>

      <div class="col-md-9 border border-dark bg-white text-dark p-2">
        <div class="row d-flex align-self-center">
          <div class="col-md-1">
            <%= f.radio_button :reason, :"法律違反である（プライバシー侵害、企業情報漏洩、名誉棄損等）", checked: true %>
          </div>
          <div class="col-md-10">
            <%= f.label :reason, "法律違反である（プライバシー侵害、企業情報漏洩、名誉棄損等）", value: :"法律違反である（プライバシー侵害、企業情報漏洩、名誉棄損等）" %>
          </div>
        </div>

        <div class="row d-flex align-self-center">
          <div class="col-md-1">
            <%= f.radio_button :reason, :"社会的に不適切である（公序良俗に反する）" %>
          </div>
          <div class="col-md-10">
            <%= f.label :reason, "社会的に不適切である（公序良俗に反する）", value: :"社会的に不適切である（公序良俗に反する）" %>
          </div>
        </div>

        <div class="row d-flex align-self-center">
          <div class="col-md-1">
            <%= f.radio_button :reason, :"上記以外で相応しくない発言である" %>
          </div>
          <div class="col-md-10">
            <%= f.label :reason, "上記以外で相応しくない発言である", value: :"上記以外で相応しくない発言である" %>
          </div>
        </div>
      </div>

    </div>
  </div>
    <div class="row justify-content-center pt-3">
      <%= f.submit "通報する", data: { confirm: "本当に通報しますか？" }, class: "btn btn-danger col-md-3" %>
    </div>
  <% end %>

  <div class="row justify-content-center py-3">
    <% if params[:reply_id] %>
      <%= link_to "返信一覧へ戻る", job_theme_comment_replies_path(@comment.job, @comment.theme, @comment), class: "btn btn-primary col-md-3" %>
    <% else %>
      <%= link_to "掲示板へ戻る", job_theme_path(@comment.job, @comment.theme), class: "btn btn-primary col-md-3" %>
    <% end %>
  </div>
<div class = "container p-4">
    <div class="row justify-content-center py-4">
      <h3>新規会員登録</h3>
    </div>

    <%= form_with model: @member, url: member_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group row px-2">
          <%= f.label :"名前", class: "col-sm-2 col-form-label" %>
          <%= f.label :"(姓)", class: "col-sm-1 col-form-label" %>
          <%= f.text_field  :last_name, autofocus: true, class: "col-lg-2" %>
          <%= f.label :"(名)", class: "col-sm-1 col-form-label" %>
          <%= f.text_field :first_name, autofocus: true, class: "col-lg-2" %>
        </div>

        <div class="form-group row px-2">
          <%= f.label :"ニックネーム", class: "col-sm-3  col-form-label" %>
          <%= f.text_field :nickname, autofocus: true, class: "col-lg-2" %>
        </div>

        <div class="form-group row px-2">
          <%= f.label :"メールアドレス", class: "col-sm-3  col-form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-3" %>
        </div>

        <div class="form-group row px-2">
          <%= f.label :"パスワード(6文字以上)", class: "col-sm-3 col-form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-lg-3" %>
        </div>

        <div class="form-group row px-2">
          <%= f.label :"パスワード(確認用)", class: "col-sm-3 col-form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-lg-3" %>
        </div>

        <div class="form-group row px-2">
          <%= f.label :"自己紹介文", class: "col-sm-3 col-form-label" %>
          <%= f.text_area :introduction,  class: "col-lg-5" %>
        </div>

        <div class="form-group row px-2">
          <%= f.label :belong, '属性', class: "col-sm-3 col-form-label" %>
          <%= f.select :belong, {"大企業勤務": "大企業勤務", "中小企業勤務": "中小企業勤務", "フリーランス": "フリーランス", "学生": "学生", "就職活動中": "就職活動中", "転職を検討中": "転職を検討中"}, { include_blank: '選択してください'}, { class: 'form-control col-lg-3' , required: true } %>
        </div>

        <div class="row justify-content-center actions">
          <%= f.submit "新規登録" , class: 'btn btn-success col-sm-3 px-2'  %>
        </div>

    <% end %>

    <div class = "row mt-4">
      <h4>すでに登録済みの方</h4>
    </div>
    <div class = "row pb-4">
      <%= link_to "こちら ", new_member_session_path %>からログインしてください。
    </div>


<%#= render "public/shared/links" %>
